#compdef note
#autoload


_note() {

    if (( CURRENT > 2)); then
        cmd=${words[2]}
        prefix="$(note --prefix)"
        case "$cmd" in
            edit|show|render|mv|rm|ls) _files -W "$prefix";;
            tree|mkdir) _directories -W "$prefix";;
        esac
    else
        IFS=';' subcmds=($(note complete zsh))
        _describe 'note commands' subcmds
    fi

}

_note
