#compdef note
#autoload


_note() {

    if (( CURRENT > 2)); then
        cmd=${words[2]}
        case "$cmd" in
            edit|show|render|mv|rm|ls) _files -W "$(note show_storage)";;
            tree|mkdir) _directories -W "$(note show_storage)";;
        esac
    else
        IFS=';' subcmds=($(note complete zsh_commands))
        _describe 'note commands' subcmds
    fi

}

_note
